@model Application.DTOs.GlobalSettings.GlobalSettingsDto
@{
    ViewData["Title"] = "Global Settings";
}

<section class="home show">
    <div class="dashboard_center_container">
        <div class="form_container admin_dashboard">

            <a asp-controller="Admin" asp-action="Index" class="dashboard_btn">
                <i class="uil uil-apps"></i> Panel
            </a>

            <h2 class="section_title">Global Settings</h2>

            <div class="content_area">

                <form method="post" class="settings_form">

                    <div class="admin_card">
                        <div class="setting_item">
                            <div class="setting_info">
                                <h4>Booking Duration</h4>
                                <p>Determine how long a reservation remains active (e.g., 30 minutes).</p>
                            </div>
                            <div class="setting_input">
                                <div class="inner_filled_box input_wrapper">
                                    <input asp-for="BookingDurationMinutes" type="number" min="1" required />
                                    <span>min</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="admin_card">
                        <div class="setting_item">
                            <div class="setting_info">
                                <h4>Merchant Edit Deadline</h4>
                                <p>Time limit for merchants to edit their offers (e.g., 24 hours).</p>
                            </div>
                            <div class="setting_input">
                                <div class="inner_filled_box input_wrapper">
                                    <input asp-for="MerchantEditHours" type="number" min="1" required />
                                    <span>hrs</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="admin_card">
                        <div class="setting_item">
                            <div class="setting_info">
                                <h4>Reservation Price</h4>
                                <p>Price for customers to reserve a coupon</p>
                            </div>
                            <div class="setting_input">
                                <div class="inner_filled_box input_wrapper">
                                    <input asp-for="ReservationPrice" type="number" min="1" required />
                                    <span>$</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form_actions">
                        <button type="submit" class="action_btn" class="uil uil-save">
                            <i class="uil uil-save"></i> Save Global Settings
                        </button>
                    </div>

                </form>

            </div>
        </div>
    </div>
</section>
<script>
    document.querySelector('.settings_form').addEventListener('submit', function (e) {
        e.preventDefault();

        const form = this;
        const btn = form.querySelector('.action_btn');
        const originalBtnHtml = btn.innerHTML;

        btn.innerHTML = '<i class="uil uil-spinner-alt"></i> Saving...';
        btn.style.opacity = '0.7';
        btn.disabled = true;

        const formData = new FormData(form);

        fetch(form.action, {
            method: 'POST',
            body: formData,
            headers: {
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                Swal.fire({
                    title: 'Success!',
                    text: data.message,
                    icon: 'success',
                    background: 'rgba(25, 25, 50, 0.95)',
                    color: '#fff',
                    showConfirmButton: false,
                    timer: 2000,
                    timerProgressBar: true
                });
            } else {
                Swal.fire({ icon: 'error', title: 'Error', text: data.message });
            }
        })
        .catch(error => {
            console.error('Error:', error);
            Swal.fire({ icon: 'error', title: 'Oops', text: 'Something went wrong!' });
        })
        .finally(() => {
            btn.innerHTML = originalBtnHtml;
            btn.style.opacity = '1';
            btn.disabled = false;
        });
    });
</script>

