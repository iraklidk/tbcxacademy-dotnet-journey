@model MVC.Models.Offer.OfferViewModel
@using Domain.Constants

@{
    ViewData["Title"] = "Admin - Offer Management";

    bool isExpired = Model.Status == OfferStatus.Expired || Model.EndDate < DateTime.UtcNow;
    bool isSoldOut = Model.RemainingCoupons <= 0;
    bool isPending = Model.Status == OfferStatus.Pending;
    bool isApproved = Model.Status == OfferStatus.Approved;
    bool isRejected = Model.Status == OfferStatus.Rejected;

    double discountAmount = (double)(Model.OriginalPrice - Model.DiscountedPrice);
    double salePercentage = (discountAmount / (double)Model.OriginalPrice) * 100;
}

<section class="offer_details_section">
    <div class="offer_details_card">

        <div class="card_header">
            <span class="category_badge">@Model.Category</span>
            <div class="admin_status_pill @Model.Status.ToString().ToLower()">Status: @Model.Status</div>
            <h2 class="offer_title">@Model.Title</h2>
        </div>

        <div class="card_body">
            <p class="offer_description">@Model.Description</p>

            <div class="pricing_row">
                <div class="price_tag">
                    <span class="discount_price">@Model.DiscountedPrice.ToString("C")</span>
                    <span class="original_price">@Model.OriginalPrice.ToString("C")</span>
                </div>
                <div class="savings_pill">
                    @salePercentage.ToString("0")% OFF
                </div>
            </div>

            <div class="stats_grid">
                <div class="stat_item">
                    <span class="stat_label">Remaining</span>
                    <span class="stat_value">@Model.RemainingCoupons / @Model.TotalCoupons</span>
                </div>

                <div class="stat_item">
                    <span class="stat_label">Ends On</span>
                    <span class="stat_value">@Model.EndDate.ToString("dd MMM yyyy")</span>
                </div>
            </div>
        </div>

        <hr class="admin_divider" />

        <div class="offer_action">
            @if (isExpired)
            {
                <div class="status_banner expired">
                    <i class="fas fa-clock"></i> EXPIRED: @Model.EndDate.ToString("dd MMM yyyy")
                </div>
            }
            else if (isRejected)
            {
                <div class="status_banner expired">
                    <i class="fas fa-clock"></i> REJECTED
                </div>
            }
            else if (isSoldOut)
            {
                <div class="status_banner sold_out">
                    <i class="fas fa-exclamation-circle"></i> SOLD OUT
                </div>
            }

            <div class="button_grid_container mt-3">
                @if (isPending)
                {
                    <form asp-controller="Admin" asp-action="UpdateStatus" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <input type="hidden" name="Status" value="@OfferStatus.Approved" />

                        <button type="submit" class="btn btn_approve">
                            <span class="btn_icon">✔</span> Approve
                        </button>
                    </form>

                    <form asp-controller="Admin" asp-action="UpdateStatus" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <input type="hidden" name="Status" value="@OfferStatus.Rejected" />

                        <button type="submit" class="btn btn_reject">
                            <span class="btn_icon">✖</span> Reject
                        </button>
                    </form>
                }
                else if (isApproved)
                {
                    <form asp-controller="Admin" asp-action="DeleteOffer" method="post" class="full_width_form">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="offerId" value="@Model.Id" />
                        <button type="submit" class="btn btn_reject">
                            <span class="btn_icon">🗑</span> Delete Offer
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</section>

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap');

    .offer_details_section {
        font-family: 'Inter', sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 20px;
        min-height: 100vh;
        background: radial-gradient(circle at top left, #0f172a, #1e293b);
        color: #fff;
    }

    .offer_details_card {
        width: 100%;
        max-width: 600px;
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 40px;
        border-radius: 30px;
        box-shadow: 0 40px 100px rgba(0,0,0,0.5);
    }

    .category_badge {
        background: rgba(125, 42, 232, 0.2);
        color: #a370f7;
        padding: 6px 16px;
        border-radius: 50px;
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        margin-bottom: 10px;
        display: inline-block;
    }

    .admin_status_pill {
        float: right;
        font-size: 11px;
        padding: 4px 12px;
        border-radius: 6px;
        text-transform: uppercase;
        font-weight: 800;
    }

        .admin_status_pill.pending {
            background: #f59e0b;
            color: #fff;
        }

        .admin_status_pill.approved {
            background: #10b981;
            color: #fff;
        }

    .offer_title {
        font-size: 32px;
        clear: both;
        font-weight: 700;
        background: linear-gradient(to right, #fff, #bbb);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .offer_description {
        color: #ccc;
        line-height: 1.8;
        margin: 20px 0;
    }

    .pricing_row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 30px;
    }

    .discount_price {
        font-size: 36px;
        font-weight: 700;
        color: #00d2ff;
    }

    .original_price {
        text-decoration: line-through;
        color: #777;
        margin-left: 10px;
    }

    .savings_pill {
        background: #e63946;
        color: white;
        padding: 6px 14px;
        border-radius: 10px;
        font-weight: 800;
        font-size: 14px;
    }

    .stats_grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
        margin-bottom: 30px;
    }

    .stat_item {
        background: rgba(255,255,255,0.05);
        padding: 15px;
        border-radius: 15px;
        text-align: center;
    }

    .stat_label {
        display: block;
        font-size: 11px;
        color: #888;
        text-transform: uppercase;
    }

    .stat_value {
        font-weight: 600;
    }

    .admin_divider {
        border: 0;
        border-top: 1px solid rgba(255,255,255,0.1);
        margin: 20px 0;
    }

    .button_grid_container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
        width: 100%;
    }

    .full_width_form {
        grid-column: span 2;
    }

    .button_grid_container form {
        margin: 0;
        display: flex;
    }

    .btn {
        width: 100%;
        height: 56px;
        border-radius: 15px;
        border: none;
        font-weight: 700;
        font-size: 15px;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn_approve {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
    }

        .btn_approve:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(16, 185, 129, 0.3);
        }

    .btn_reject {
        background: rgba(239, 68, 68, 0.1);
        border: 2px solid #ef4444;
        color: #ef4444;
    }

        .btn_reject:hover {
            background: #ef4444;
            color: white;
        }

    .status_banner {
        width: 100%;
        padding: 18px;
        border-radius: 15px;
        text-align: center;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .expired {
        border: 1px solid #ff4d4d;
        color: #ff4d4d;
        background: rgba(255, 77, 77, 0.05);
    }

    .rejected {
        border: 1px solid #ff4d4d;
        color: #ff4d4d;
        background: rgba(255, 77, 77, 0.05);
    }

    .sold_out {
        border: 1px solid #dc3545;
        color: #dc3545;
        background: rgba(220, 53, 69, 0.05);
    }
</style>
