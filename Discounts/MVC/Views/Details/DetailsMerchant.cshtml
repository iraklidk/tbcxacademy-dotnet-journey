@model MVC.Models.Offer.OfferViewModel
@using Domain.Constants

@{
    ViewData["Title"] = "Merchant - Offer Management";

    bool isExpired = Model.Status == OfferStatus.Expired || Model.EndDate < DateTime.UtcNow;
    bool isSoldOut = Model.RemainingCoupons <= 0;
    bool isPending = Model.Status == OfferStatus.Pending;
    bool isApproved = Model.Status == OfferStatus.Approved;
    bool isRejected = Model.Status == OfferStatus.Rejected;

    double discountAmount = (double)(Model.OriginalPrice - Model.DiscountedPrice);
    double salePercentage = (discountAmount / (double)Model.OriginalPrice) * 100;
}

<section class="offer_details_section">
    <div class="offer_details_card">
        <div class="card_header">
            <div class="admin_status_pill @Model.Status.ToString().ToLower()">@Model.Status</div>
            <h2 class="offer_title">@Model.Title</h2>
        </div>

        <div class="card_body">
            <p class="offer_description">@Model.Description</p>

            <div class="pricing_row">
                <div class="price_tag">
                    <span class="discount_price">@Model.DiscountedPrice.ToString("C")</span>
                    <span class="original_price">@Model.OriginalPrice.ToString("C")</span>
                </div>
                <div class="savings_pill">
                    @salePercentage.ToString("0")% OFF
                </div>
            </div>

            <div class="stats_grid">
                <div class="stat_item">
                    <span class="stat_label">Remaining</span>
                    <span class="stat_value">@Model.RemainingCoupons / @Model.TotalCoupons</span>
                </div>
                <div class="stat_item">
                    <span class="stat_label">Ends On</span>
                    <span class="stat_value">@Model.EndDate.ToString("dd MMM yyyy")</span>
                </div>
            </div>
        </div>

        <div class="offer_action">
            @if (isExpired)
            {
                <div class="status_banner expired">
                    <i class="fas fa-clock"></i> EXPIRED: @Model.EndDate.ToString("dd MMM yyyy")
                </div>
            }
            else if (isRejected)
            {
                <div class="status_banner expired">
                    <i class="fas fa-clock"></i> REJECTED
                </div>
            }

            <div class="button_grid_container mt-3">
                @if ((isApproved || isPending) && ViewBag.OfferMerchantId == ViewBag.MerchantId)
                {
                    <button type="button" class="btn btn_edit" onclick="openEditModal()">
                        <span class="btn_icon">✏️</span> Edit
                    </button>

                    <form asp-controller="Merchant" asp-action="DeleteOffer" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn_reject">
                            <span class="btn_icon">🗑</span> Delete
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</section>

<div id="editModal" class="modal_overlay">
    <div class="modal_content">
        <div class="modal_header">
            <h3 style="color: white;">Edit Offer Details</h3>
        </div>
        <form asp-controller="Merchant" asp-action="EditOffer" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="form_group">
                <label>Offer Title</label>
                <input type="text" name="Title" value="@Model.Title" required />
            </div>

            <div class="form_group">
                <label>Discounted Price</label>
                <input type="number" step="0.01" name="DiscountedPrice" value="@Model.DiscountedPrice" required />
            </div>

            <div class="form_group">
                <label>Description</label>
                <textarea name="Description" rows="3" required>@Model.Description</textarea>
            </div>

            <div class="form_row">
                <div class="form_group">
                    <label>Remaining Coupons</label>
                    <input type="number" name="RemainingCoupons" value="@Model.RemainingCoupons" required />
                </div>
                <div class="form_group">
                    <label>End Date</label>
                    <input type="date" name="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" required />
                </div>
            </div>

            <div class="modal_actions">
                <button type="button" class="btn_cancel" onclick="closeEditModal()">Cancel</button>
                <button type="submit" class="btn_save">Update Offer</button>
            </div>
        </form>
    </div>
</div>

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap');

    .offer_details_section {
        font-family: 'Inter', sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 20px;
        min-height: 100vh;
        background: radial-gradient(circle at top left, #1a1a2e, #16213e);
        color: #fff;
    }

    .offer_details_card {
        width: 100%;
        max-width: 600px;
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 40px;
        border-radius: 30px;
        box-shadow: 0 40px 100px rgba(0,0,0,0.5);
    }

    .admin_status_pill {
        float: right;
        font-size: 11px;
        padding: 4px 12px;
        border-radius: 6px;
        text-transform: uppercase;
        font-weight: 800;
    }

        .admin_status_pill.pending {
            background: #f59e0b;
        }

        .admin_status_pill.approved {
            background: #10b981;
        }

    .offer_title {
        font-size: 32px;
        margin-top: 5px;
        font-weight: 700;
        color: #fff;
    }

    .offer_description {
        color: #ccc;
        line-height: 1.6;
        margin: 20px 0;
    }

    .pricing_row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

    .discount_price {
        font-size: 32px;
        font-weight: 700;
        color: #00d2ff;
    }

    .original_price {
        text-decoration: line-through;
        color: #777;
        margin-left: 10px;
    }

    .savings_pill {
        background: #e63946;
        color: white;
        padding: 5px 12px;
        border-radius: 8px;
        font-weight: 800;
    }

    .stats_grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
        margin-bottom: 30px;
    }

    .stat_item {
        background: rgba(255,255,255,0.05);
        padding: 15px;
        border-radius: 15px;
        text-align: center;
    }

    .stat_label {
        display: block;
        font-size: 11px;
        color: #888;
        text-transform: uppercase;
    }

    .stat_value {
        font-weight: 600;
    }

    .button_grid_container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
    }

        .button_grid_container form {
            display: flex;
        }

    .btn {
        width: 100%;
        height: 56px;
        border-radius: 15px;
        border: none;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

        .btn:hover {
            transform: translateY(-3px);
        }

        .btn:active {
            transform: translateY(-1px);
        }

    .btn_approve {
        background: #10b981;
        color: white;
    }

        .btn_approve:hover {
            background: #059669;
            box-shadow: 0 10px 20px rgba(16, 185, 129, 0.3);
        }

    .btn_edit {
        background: #3b82f6;
        color: white;
    }

        .btn_edit:hover {
            background: #2563eb;
            box-shadow: 0 10px 20px rgba(59, 130, 246, 0.3);
        }

    .btn_reject {
        background: rgba(239, 68, 68, 0.1);
        border: 2px solid #ef4444;
        color: #ef4444;
    }

        .btn_reject:hover {
            background: #ef4444;
            color: white;
            box-shadow: 0 10px 20px rgba(239, 68, 68, 0.3);
        }

    .modal_overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.85);
        backdrop-filter: blur(12px);
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    .modal_content {
        background: #1e293b;
        width: 95%;
        max-width: 550px;
        padding: 35px;
        border-radius: 25px;
        border: 1px solid rgba(255,255,255,0.1);
    }

    .form_group label {
        display: block;
        font-size: 11px;
        color: #94a3b8;
        text-transform: uppercase;
        margin-bottom: 8px;
    }

    .form_group input, .form_group textarea {
        width: 100%;
        padding: 14px;
        border-radius: 12px;
        border: 1px solid #334155;
        background: #0f172a;
        color: #fff;
        box-sizing: border-box;
    }

    .form_row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }

    .modal_actions {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
        margin-top: 30px;
    }

    .btn_save {
        background: #10b981;
        color: #fff;
        padding: 14px;
        border-radius: 12px;
        border: none;
        font-weight: 700;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn_save:hover {
            background: #059669;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(16, 185, 129, 0.3);
        }

    .btn_cancel {
        background: #475569;
        color: #fff;
        padding: 14px;
        border-radius: 12px;
        border: none;
        font-weight: 700;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn_cancel:hover {
            background: #334155;
            transform: translateY(-2px);
        }

    .status_banner {
        width: 100%;
        padding: 18px;
        border-radius: 15px;
        text-align: center;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .expired {
        border: 1px solid #ff4d4d;
        color: #ff4d4d;
    }

    .sold_out {
        border: 1px solid #dc3545;
        color: #dc3545;
    }
</style>

<script>
    function openEditModal() { document.getElementById('editModal').style.display = 'flex'; }
    function closeEditModal() { document.getElementById('editModal').style.display = 'none'; }
    window.onclick = function(event) {
        let modal = document.getElementById('editModal');
        if (event.target == modal) modal.style.display = 'none';
    }
</script>
