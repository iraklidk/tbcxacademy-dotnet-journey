@model List<OfferViewModel>;
@using System.Linq
@using System.Security.Claims
@using MVC.Models.Offer

@{
    ViewData["Title"] = "Offers";
}

<style>
    .validation-error-container {
        background-color: #ffe6e6;
        color: #d93025;
        padding: 10px;
        border-radius: 4px;
        margin-bottom: 15px;
        border: 1px solid #ffcccc;
        display: none;
        font-size: 0.9rem;
    }

    .input-error {
        border: 1px solid #d93025 !important;
    }
</style>

<section class="home show">
    <div class="dashboard_center_container">
        <div class="form_container admin_dashboard">

            <a asp-controller="Merchant" asp-action="Index" class="dashboard_btn">
                <i class="uil uil-apps"></i> Panel
            </a>

            <h2 class="section_title">My Offers</h2>

            <div class="offers_stats">
                <div class="stat_box approved_offers">
                    <h3>Approved</h3>
                    <p>@Model.Count(o => o.Status == Domain.Constants.OfferStatus.Approved)</p>
                </div>
                <div class="stat_box pending_offers">
                    <h3>Pending</h3>
                    <p>@Model.Count(o => o.Status == Domain.Constants.OfferStatus.Pending)</p>
                </div>
                <div class="stat_box expired_offers">
                    <h3>Expired</h3>
                    <p>@Model.Count(o => o.Status == Domain.Constants.OfferStatus.Expired)</p>
                </div>
                <div class="stat_box rejected_offers">
                    <h3>Rejected</h3>
                    <p>@Model.Count(o => o.Status == Domain.Constants.OfferStatus.Rejected)</p>
                </div>
            </div>

            <div class="content_area">
                <button type="button" class="add_offer_btn" onclick="openAddModal()">
                    <i class="uil uil-plus"></i> Add New Offer
                </button>

                <div class="sales_table_container">
                    <table class="sales_table">
                        <thead>
                            <tr>
                                <th style="text-align:center;">Title</th>
                                <th>Category</th>
                                <th>Original</th>
                                <th>Discount</th>
                                <th>Total Coupons</th> 
                                <th>Remaining</th> 
                                <th style="text-align:center; margin: 2px;">Status</th>
                                <th style="width: 150px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var offer in Model)
                                {
                                    <tr>
                                        <td><strong>@offer.Title</strong></td>
                                        <td>@offer.Category</td>
                                        <td>@offer.OriginalPrice.ToString("C")</td>
                                        <td>@offer.DiscountedPrice.ToString("C")</td>
                                        <td style="text-align:center;">@offer.TotalCoupons</td>
                                        <td style="text-align:center;">@offer.RemainingCoupons</td> 
                                        <td>
                                            <span class="status_tag @(offer.Status.ToString().ToLower())">
                                                @offer.Status
                                            </span>
                                        </td>
                                        <td>
                                            <div class="action_group">
                                                @if (offer.Status == Domain.Constants.OfferStatus.Approved || offer.Status == Domain.Constants.OfferStatus.Pending)
                                                {
                                                    <button type="button" class="action_btn edit_btn"
                                                            onclick="openEditModal('@offer.Id', '@offer.Title', '@offer.Description', '@offer.DiscountedPrice', '@offer.TotalCoupons', '@offer.EndDate.ToString("yyyy-MM-dd")')">
                                                        Edit
                                                    </button>

                                                    <form asp-controller="Merchant" asp-action="DeleteOffer" asp-route-id="@offer.Id" method="post" style="display:inline;">
                                                        <button type="submit" class="action_btn delete_btn">Delete</button>
                                                    </form>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" style="text-align:center; padding: 40px;">No offers found. Start by adding one!</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div id="addOfferModal" class="modal_overlay" onclick="handleOutsideClick(event, 'addOfferModal')">
        <div class="modal_content">
            <div class="modal_header">
                <h3>Create New Offer</h3>
                <button type="button" class="close_modal_btn" onclick="closeAddModal()">&times;</button>
            </div>

            <form asp-action="AddOffer" method="post" class="modal_form" id="addOfferForm">
                @Html.AntiForgeryToken()
                <div id="addValidationSummary" class="validation-error-container"></div>

                <div class="form_group">
                    <label>Offer Title</label>
                    <input name="Title" id="addTitle" placeholder="e.g. Summer Special 20%" required />
                </div>

                <div class="form_group">
                    <label>Description</label>
                    <input name="Description" id="addDescription" placeholder="Describe your offer details..." />
                </div>

                <div class="form_row">
                    <div class="form_group">
                        <label>Original Price</label>
                        <input name="OriginalPrice" id="addOriginalPrice" placeholder="100" type="number" step="0.01" required />
                    </div>
                    <div class="form_group">
                        <label>Discounted Price</label>
                        <input name="DiscountedPrice" id="addDiscountedPrice" placeholder="50" type="number" step="0.01" required />
                    </div>
                </div>

                <div class="form_row">
                    <div class="form_group">
                        <label>Total Coupons</label>
                        <input name="TotalCoupons" id="addTotalCoupons" placeholder="100" type="number" required />
                    </div>
                    <div class="form_group">
                        <label>Category</label>
                        <select name="CategoryId" id="addCategory" class="fancy_select" required>
                            <option value="">Select Category</option>
                            @foreach (var cat in ViewBag.Categories)
                            {
                                <option value="@cat.Id">@cat.Name</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form_row">
                    <div class="form_group">
                        <label>Start Date</label>
                        <input name="StartDate" id="addStartDate" type="date" required />
                    </div>
                    <div class="form_group">
                        <label>End Date</label>
                        <input name="EndDate" id="addEndDate" type="date" required />
                    </div>
                </div>

                <input type="hidden" name="UserId" value="@User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier)" />

                <div class="modal_buttons">
                    <button type="button" class="cancel_btn" onclick="closeAddModal()">Discard</button>
                    <button type="submit" class="save_btn">Create Offer</button>
                </div>
            </form>
        </div>
    </div>

    <div id="editOfferModal" class="modal_overlay" onclick="handleOutsideClick(event, 'editOfferModal')">
        <div class="modal_content">
            <div class="modal_header">
                <h3>Edit Offer</h3>
                <button type="button" class="close_modal_btn" onclick="closeEditModal()">&times;</button>
            </div>

            <form asp-action="EditOffer" method="post" class="modal_form" id="editOfferForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="Id" id="editId" />
                <div id="editValidationSummary" class="validation-error-container"></div>

                <div class="form_group">
                    <label>Offer Title</label>
                    <input name="Title" id="editTitle" required />
                </div>

                <div class="form_group">
                    <label>Description</label>
                    <input name="Description" id="editDescription" required />
                </div>

                <div class="form_row">
                    <div class="form_group">
                        <label>Discounted Price</label>
                        <input name="DiscountedPrice" id="editDiscountedPrice" type="number" step="0.01" required />
                    </div>
                    <div class="form_group">
                        <label>Coupons</label>
                        <input name="RemainingCoupons" id="editTotalCoupons" placeholder="100" type="number" required />
                    </div>
                </div>

                <div class="form_group">
                    <label>End Date</label>
                    <input name="EndDate" id="editEndDate" type="date" required />
                </div>
                <input type="hidden" name="UserId" value="@User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier)" />

                <div class="modal_buttons">
                    <button type="button" class="cancel_btn" onclick="closeEditModal()">Discard</button>
                    <button type="submit" class="save_btn">Update Offer</button>
                </div>
            </form>
        </div>
    </div>
</section>

<script>
    function openAddModal() {
        document.getElementById('addOfferModal').style.display = 'flex';
    }

    function closeAddModal() {
        document.getElementById('addOfferModal').style.display = 'none';
        document.getElementById('addOfferForm').reset();
        document.getElementById('addValidationSummary').style.display = 'none';
    }

    function openEditModal(id, title, desc, price, coupons, endDate) {
        document.getElementById('editId').value = id;
        document.getElementById('editTitle').value = title;
        document.getElementById('editDescription').value = desc;

        const cleanPrice = price.replace(/[^0-9.-]+/g, "");
        document.getElementById('editDiscountedPrice').value = cleanPrice;

        document.getElementById('editTotalCoupons').value = coupons;
        document.getElementById('editEndDate').value = endDate;

        document.getElementById('editOfferModal').style.display = 'flex';
    }

    function closeEditModal() {
        document.getElementById('editOfferModal').style.display = 'none';
        document.getElementById('editValidationSummary').style.display = 'none';
    }

    function handleOutsideClick(event, modalId) {
        if (event.target.id === modalId) {
            modalId === 'addOfferModal'
                ? closeAddModal()
                : closeEditModal();
        }
    }

    document.getElementById('addOfferForm').addEventListener('submit', function (e) {
        let errors = [];

        const original = parseFloat(document.getElementById('addOriginalPrice').value);
        const discount = parseFloat(document.getElementById('addDiscountedPrice').value);
        const start = new Date(document.getElementById('addStartDate').value);
        const end = new Date(document.getElementById('addEndDate').value);
        const category = document.getElementById('addCategory').value;

        if (discount >= original)
            errors.push("Discounted price must be less than original price.");

        if (end <= start)
            errors.push("End date must be after start date.");

        if (!category)
            errors.push("Please select a category.");

        if (errors.length > 0) {
            e.preventDefault();
            const errorDiv = document.getElementById('addValidationSummary');
            errorDiv.innerHTML = errors.join('<br>');
            errorDiv.style.display = 'block';
        }
    });

    document.getElementById('editOfferForm').addEventListener('submit', function (e) {
        let errors = [];

        const discount = parseFloat(document.getElementById('editDiscountedPrice').value);
        const coupons = parseInt(document.getElementById('editTotalCoupons').value);

        if (discount <= 0)
            errors.push("Price must be greater than 0.");

        if (coupons < 1)
            errors.push("You must offer at least 1 coupon.");

        if (errors.length > 0) {
            e.preventDefault();
            const errorDiv = document.getElementById('editValidationSummary');
            errorDiv.innerHTML = errors.join('<br>');
            errorDiv.style.display = 'block';
        }
    });
</script>

