@model List<HealthCheckViewModel>
@{
    ViewData["Title"] = "System Health";
    var overall = ViewBag.OverallStatus?.ToString() ?? "Unknown";
}

<div class="health-dashboard">
    <header class="dashboard-header">
        <div class="header-content">
            <h1>System Health</h1>
            <p class="subtitle">Real-time status of core infrastructure and services</p>
        </div>
        @{
            var overallClass = overall.ToLower();
        }
        <div class="overall-status-card @overallClass">
            <span class="pulse-icon"></span>
            <span class="status-text">System is @overall</span>
        </div>
    </header>

    <div class="status-grid-container">
        <table class="status-table">
            <thead>
                <tr>
                    <th>Service Name</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var check in Model)
                {
                    var statusClass = check.Status.ToLower();
                    <tr>
                        <td class="service-info">
                            <span class="service-dot @statusClass"></span>
                            <strong>@check.Name</strong>
                        </td>
                        <td>
                            <span class="status-pill @statusClass">
                                @check.Status
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <footer class="dashboard-footer">
        <div class="last-updated">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12a9 9 0 1 1-9-9c2.52 0 4.93 1 6.74 2.74L21 8"></path><polyline points="21 3 21 8 16 8"></polyline></svg>
            Last checked: @DateTime.Now.ToString("HH:mm:ss")
        </div>
    </footer>
</div>

<style>
    :root {
        --bg-dark: #0f172a;
        --card-bg: rgba(30, 41, 59, 0.7);
        --accent-healthy: #10b981;
        --accent-degraded: #f59e0b;
        --accent-unhealthy: #ef4444;
        --text-main: #f8fafc;
        --text-muted: #94a3b8;
        --border-color: rgba(255, 255, 255, 0.08);
    }

    body {
        font-family: 'Inter', 'Segoe UI', system-ui, sans-serif;
        background-color: var(--bg-dark);
        background-image: radial-gradient(at 0% 0%, rgba(16, 185, 129, 0.05) 0, transparent 50%), radial-gradient(at 100% 0%, rgba(59, 130, 246, 0.05) 0, transparent 50%);
        color: var(--text-main);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0;
    }

    .health-dashboard {
        width: 90%;
        max-width: 1100px;
        background: var(--card-bg);
        backdrop-filter: blur(12px);
        border: 1px solid var(--border-color);
        border-radius: 24px;
        padding: 40px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    }

    .dashboard-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 40px;
        border-bottom: 1px solid var(--border-color);
        padding-bottom: 20px;
    }

    h1 {
        font-size: 2rem;
        font-weight: 800;
        margin: 0;
        background: linear-gradient(to right, #fff, #94a3b8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .subtitle {
        color: var(--text-muted);
        margin: 5px 0 0 0;
        font-size: 0.95rem;
    }

    .overall-status-card {
        padding: 10px 20px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        gap: 12px;
        font-weight: 600;
        border: 1px solid transparent;
    }

        .overall-status-card.healthy {
            background: rgba(16, 185, 129, 0.1);
            border-color: rgba(16, 185, 129, 0.2);
            color: var(--accent-healthy);
        }

        .overall-status-card.degraded {
            background: rgba(245, 158, 11, 0.1);
            border-color: rgba(245, 158, 11, 0.2);
            color: var(--accent-degraded);
        }

        .overall-status-card.unhealthy {
            background: rgba(239, 68, 68, 0.1);
            border-color: rgba(239, 68, 68, 0.2);
            color: var(--accent-unhealthy);
        }

    .status-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 8px;
    }

        .status-table th {
            text-align: left;
            padding: 12px 16px;
            color: var(--text-muted);
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .status-table tbody tr {
            background: rgba(255, 255, 255, 0.03);
            transition: all 0.2s ease;
        }

            .status-table tbody tr:hover {
                background: rgba(255, 255, 255, 0.07);
                transform: translateY(-2px);
            }

        .status-table td {
            padding: 16px;
            border-top: 1px solid var(--border-color);
            border-bottom: 1px solid var(--border-color);
        }

            .status-table td:first-child {
                border-left: 1px solid var(--border-color);
                border-radius: 12px 0 0 12px;
            }

            .status-table td:last-child {
                border-right: 1px solid var(--border-color);
                border-radius: 0 12px 12px 0;
            }

    .service-info {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .service-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        box-shadow: 0 0 10px currentColor;
    }

    .status-pill {
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
    }

    .healthy {
        color: var(--accent-healthy);
    }

    .degraded {
        color: var(--accent-degraded);
    }

    .unhealthy {
        color: var(--accent-unhealthy);
    }

    .status-pill.healthy {
        background: rgba(16, 185, 129, 0.15);
    }

    .status-pill.degraded {
        background: rgba(245, 158, 11, 0.15);
    }

    .status-pill.unhealthy {
        background: rgba(239, 68, 68, 0.15);
    }

    .description {
        color: var(--text-muted);
        font-size: 0.9rem;
        max-width: 400px;
    }

    .text-right {
        text-align: right;
    }

    .uptime-val {
        font-family: 'Courier New', monospace;
        color: var(--accent-healthy);
        opacity: 0.8;
    }

    .dashboard-footer {
        margin-top: 30px;
        display: flex;
        justify-content: center;
    }

    .last-updated {
        display: flex;
        align-items: center;
        gap: 8px;
        color: var(--text-muted);
        font-size: 0.8rem;
        background: rgba(0,0,0,0.2);
        padding: 6px 16px;
        border-radius: 20px;
    }

    .pulse-icon {
        width: 10px;
        height: 10px;
        background: currentColor;
        border-radius: 50%;
        position: relative;
    }

        .pulse-icon::after {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            background: currentColor;
            border-radius: 50%;
            animation: pulse 2s infinite;
            opacity: 0.5;
        }

</style>
