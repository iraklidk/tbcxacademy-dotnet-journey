@model MVC.Models.User.ForgotPasswordViewModel

<section class="home show">
    <div class="form_container">
        <i class="uil uil-times form_close"></i>

        <div class="form forgot_form">
            <form asp-action="ForgotPassword" method="post">
                <h2>Forgot Password</h2>
                <p class="text-center">We'll send a new password to your email.</p>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="input_box">
                    <input asp-for="Email" placeholder="Enter your registered email" />
                    <i class="uil uil-envelope-alt email"></i>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="lgn_btn button">Send New Password</button>
                <div class="login_signup">Remember your password? <a asp-action="Login">Login</a></div>
            </form>
        </div>
    </div>
</section>
<style>
    .lgn_btn {
        background: #4f46e5;
        color: #fff;
        border: none;
        padding: 12px 25px;
        border-radius: 8px;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(79, 70, 229, 0.3);
    }

        .lgn_btn:hover {
            transform: scale(1.05); 
            filter: brightness(1.2); 
            box-shadow: 0 6px 20px rgba(79, 70, 229, 0.4);
        }

        .lgn_btn:active {
            transform: scale(0.98);
            filter: brightness(1);
        }
</style>
