@model Application.DTOs.Auth.LoginRequest;

<section class="home show">
    <div class="form_container">
        <a asp-controller="Home" asp-action="Index" class="back_to_main">
            <i class="uil uil-arrow-left"></i> <span>Main Page</span>
        </a>

        <i class="uil uil-times form_close"></i>

        <div class="form login_form">
            <form asp-action="Login" method="post">
                <h2 class="lg">Login</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="input_box">
                    <input asp-for="UserName" placeholder="Enter your email/username" />
                    <i class="uil uil-envelope-alt email"></i>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="input_box">
                    <input asp-for="Password" type="password" placeholder="Enter your password" />
                    <i class="uil uil-lock password"></i>
                    <i class="uil uil-eye-slash pw_hide"></i>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="option_field">
                    <span class="checkbox">
                        <input type="checkbox" id="check" />
                        <label for="check">Remember me</label>
                    </span>
                    <a asp-action="ForgotPassword" class="frg">Forgot password?</a>
                </div>

                <button type="submit" class="button lgn_btn">Login Now</button>
                <div class="login_signup">Don't have an account? <a asp-action="Register" class="sgnp">Signup</a></div>
            </form>
        </div>
    </div>
</section>

<style>
    .form_container {
        position: relative;
        padding-top: 50px;
    }

    .back_to_main {
        position: absolute;
        top: 20px;
        left: 20px;
        display: flex;
        align-items: center;
        gap: 5px;
        text-decoration: none;
        color: #707070;
        font-size: 14px;
        font-weight: 500;
        transition: all 0.3s ease;
        z-index: 10;
    }

        .back_to_main i {
            font-size: 18px;
        }

        .back_to_main:hover {
            color: #4f46e5;
            transform: translateX(-3px);
        }

    .frg, .sgnp {
        display: inline-block;
        transition: all 0.3s ease;
        text-decoration: none;
    }

        .frg:hover {
            color: #4f46e5;
            transform: translateX(2px);
            transform: translateY(-2px);
        }

        .sgnp:hover {
            color: #4f46e5;
            transform: translateX(2px);
            transform: translateY(-2px);
        }

    .lgn_btn {
        background: #4f46e5;
        color: #fff;
        border: none;
        padding: 12px 25px;
        border-radius: 8px;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(79, 70, 229, 0.3);
        width: 100%;
        margin-top: 10px;
    }

        .lgn_btn:hover {
            transform: scale(1.02);
            filter: brightness(1.2);
            box-shadow: 0 6px 20px rgba(79, 70, 229, 0.4);
        }

        .lgn_btn:active {
            transform: scale(0.98);
            filter: brightness(1);
        }

    .text-danger {
        font-size: 12px;
        display: block;
        margin-top: 5px;
    }
</style>
