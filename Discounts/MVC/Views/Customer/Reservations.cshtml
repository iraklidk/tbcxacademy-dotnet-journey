@model List<Application.DTOs.Reservation.ReservationDto>

@{
    ViewData["Title"] = "My Reservations";
}

<section class="home show">
    <div class="dashboard_center_container">
        <div class="form_container customer_dashboard">

            <a asp-controller="Customer" asp-action="Index" class="dashboard_btn">
                <i class="uil uil-apps"></i> Panel
            </a>

            <h2 class="section_title">My Reservations</h2>

            <div class="content_area">
                <div class="customer_card scrollable_card">
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="width: 25%;">Offer Title</th>
                                <th style="width: 20%;">Reserved / Expires</th>
                                <th style="width: 15%;">Price</th>
                                <th style="width: 20%;">Status</th>
                                <th style="width: 20%;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var res in Model)
                                {
                                    bool isExpired = DateTime.UtcNow > res.ExpiresAt;
                                    var statusText = isExpired ? "Expired" : "Active";
                                    var statusClass = isExpired ? "expired_status" : "active_status";
                                    <tr>
                                        <td>
                                            <div style="justify-content:center;" class="inner_filled_box title_box">
                                                <strong>@res.OfferTitle</strong>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="inner_filled_box date_stack">
                                                <span class="date_text">@res.ReservedAt.ToString("dd MMM HH:mm")</span>
                                                <span class="date_label">to</span>
                                                <span class="date_text">@res.ExpiresAt.ToString("dd MMM HH:mm")</span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="inner_filled_box price_tag">
                                                @res.Price.ToString("C2")
                                            </div>
                                        </td>
                                        <td>
                                            <div class="inner_filled_box status_box @statusClass">
                                                @statusText
                                            </div>
                                        </td>
                                        <td>
                                            @if (!isExpired)
                                            {
                                                <form asp-controller="Customer" asp-action="BuyFromReservation" method="post" style="margin:0;">
                                                    <input type="hidden" name="price" value="@res.Price" />
                                                    <input type="hidden" name="offerId" value="@res.OfferId" />
                                                    <input type="hidden" name="reservationId" value="@res.Id" />
                                                    <button type="submit" class="buy_btn">
                                                        <i class="uil uil-wallet"></i> BUY NOW
                                                    </button>
                                                </form>

                                            }
                                            else
                                            {
                                                <div class="buy_btn disabled_btn">
                                                    <i class="uil uil-times-circle"></i> Closed
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" style="text-align: center; padding: 50px; color: #8a8ab0;">
                                        No reservations found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

