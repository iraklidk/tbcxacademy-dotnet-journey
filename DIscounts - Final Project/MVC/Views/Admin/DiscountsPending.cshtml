@model List<Application.DTOs.Offer.OfferDto>

@{
    ViewData["Title"] = "Pending Discounts";
}

<section class="home show">
    <div class="dashboard_center_container">
        <div class="form_container admin_dashboard">

            <a asp-controller="Admin" asp-action="Index" class="dashboard_btn">
                <i class="uil uil-apps"></i> Panel
            </a>

            <h2 class="section_title">Pending Discounts</h2>

            <div class="content_area">
                <div class="admin_card scrollable_card">
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="width:50%; text-align:center;">Discount</th>
                                <th style="width:50%; text-align:center;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var offer in Model)
                                {
                                    <tr id="row-@offer.Id">
                                        <td>
                                            <div class="inner_filled_box discount_tag">
                                                @offer.Title
                                            </div>
                                        </td>

                                        <td>
                                            <div class="actions_wrapper">
                                                <a asp-controller="Details"
                                                   asp-action="OfferDetails"
                                                   asp-route-id="@offer.Id"
                                                   class="action_btn details_btn" target="_blank">
                                                    DETAILS
                                                </a>

                                                <button class="action_btn approve_btn status-update-btn"
                                                        data-id="@offer.Id"
                                                        data-status="Approved">
                                                    APPROVE
                                                </button>

                                                <button class="action_btn reject_btn status-update-btn"
                                                        data-id="@offer.Id"
                                                        data-status="Rejected">
                                                    REJECT
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="2" style="text-align:center; color:white; padding:20px;">
                                        No Pending Discounts Found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    var tokens = Antiforgery.GetAndStoreTokens(Context);
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {

            $('.status-update-btn').off('click').on('click', function () {

                const btn = $(this);
                const offerId = btn.data('id');
                const selectedStatus = btn.data('status');
                const row = $(`#row-${offerId}`);

                row.find('.action_btn').prop('disabled', true).css('opacity', '0.5');

                const updateDto = {
                    id: parseInt(offerId),
                    status: selectedStatus
                };

                $.ajax({
                    url: '/Admin/UpdateStatus',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(updateDto),
                    headers: {
                        'RequestVerificationToken': '@tokens.RequestToken'
                    },
                    success: function () {
                        row.fadeOut(400, function () { $(this).remove(); });
                    },
                    error: function (xhr) {
                        alert("Error: " + xhr.responseText);
                        row.find('.action_btn').prop('disabled', false).css('opacity', '1');
                    }
                });
            });

        });
    </script>
}

