@model IEnumerable<Application.DTOs.User.UserDto>

@{
    ViewData["Title"] = "User Management";
}

<section class="home show">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="success_overlay">
            <div class="success_card">
                <div class="success_icon">
                    <div class="check_mark"></div>
                </div>
                <h3 class="success_title">Operation Successful</h3>
                <p class="success_text">@TempData["SuccessMessage"]</p>
                <button class="btn btn_close_success" onclick="this.parentElement.parentElement.remove()">
                    Got it!
                </button>
            </div>
        </div>
    }
    <div class="dashboard_center_container">
        <div class="form_container admin_dashboard">

            <a asp-controller="Admin" asp-action="Index" class="dashboard_btn">
                <i class="uil uil-apps"></i> Panel
            </a>

            <h2 class ="section_title">User Management</h2>

            <div class="content_area">
                <div class="admin_card scrollable_card">
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="width: 30%; text-align:center;">User</th>
                                <th style="width: 20%; text-align:center;">Role</th>
                                <th style="width: 15%; text-align:center;">Status</th>
                                <th style="width: 50%; text-align: right;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var user in Model)
                                {
                                    bool isBlocked = !user.IsActive;

                                    <tr>
                                        <td>
                                            <div class="inner_filled_box user_tag; text-align:center;">@user.UserName</div>
                                        </td>
                                        <td>
                                            @if (user.Role == "Admin")
                                            {
                                                <div class="inner_filled_box role_tag">Admin</div>
                                            }
                                            else if (user.Role == "Merchant")
                                            {
                                                <div class="inner_filled_box role_tag">Merchant</div>
                                            }
                                            else
                                            {
                                                <div class="inner_filled_box role_tag">Customer</div>
                                            }
                                        </td>
                                        <td style="text-align:center;">
                                            @if (user.IsActive)
                                            {
                                                <div class="inner_filled_box status_active">Active</div>
                                            }
                                            else
                                            {
                                                <div class="inner_filled_box status_inactive">Blocked</div>
                                            }
                                        </td>
                                        <td style="text-align: right;">
                                            @if (!isBlocked)
                                            {
                                                <button class="action_btn mini" title="Edit User"
                                                        onclick="openEditUserModal('@user.Id', '@user.UserName', '@user.Email', '@user.RoleId')">
                                                    <i class="uil uil-edit"></i> Edit
                                                </button>


                                                <form asp-action="ChangeUserStatus" asp-route-id="@user.Id" method="post" style="display:inline;">
                                                    <button type="submit" class="block_btn mini" title="Block User">
                                                        <i class="uil uil-padlock"></i> Block
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form asp-action="ChangeUserStatus" asp-route-id="@user.Id" method="post" style="display:inline;">
                                                    <button type="submit" class="action_btn mini" style="background-color: #28a745;" title="Unblock User">
                                                        <i class="uil uil-unlock"></i> Unblock
                                                    </button>
                                                </form>
                                            }

                                            <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" style="display:inline;">
                                                <button type="submit" class="reject_btn mini" title="Delete User">
                                                    <i class="uil uil-trash-alt"></i> Delete
                                                </button>
                                            </form>
                                        </td>

                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" style="text-align:center; padding: 20px; opacity: 0.5; color: white;">No Users Found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<div id="editUserModal" class="modal_overlay">
    <div class="modal_container">
        <h3>Edit User</h3>

        <form asp-action="EditUser" method="post">

            <input type="hidden" id="editUserId" name="Id" />

            <div class="modal_input_group">
                <label style="color: #999; font-size: 11px;">Username</label>
                <input type="text" id="editUsername" name="UserName" required />

                <label style="color: #999; font-size: 11px;">Email</label>
                <input type="email" id="editEmail" name="Email" required />

                <label style="color: #999; font-size: 11px;">Change Password</label>
                <input type="password" id="editPassword" name="Password"
                       placeholder="Enter new password (optional)" />

                <small style="color:#888; font-size:10px; margin-top:-6px;">
                    Leave this empty if you don’t want to change the password.
                </small>

                <label style="color: #999; font-size: 11px;">Role</label>
                <select id="editRoleId" name="RoleId">
                    <option value="3">Customer</option>
                    <option value="2">Merchant</option>
                    <option value="1">Admin</option>
                </select>
            </div>

            <div class="modal_actions">
                <button type="button" class="reject_btn mini" onclick="closeEditUserModal()">Cancel</button>
                <form asp-action="EditUser" method="post" style="display:inline;">
                    <button type="submit" class="action_btn mini" style="margin-left: 10px;">
                        Save Changes
                    </button>
                </form>
            </div>
        </form>
    </div>
</div>


<script>
    function openEditUserModal(id, username, email, roleId) {
        document.getElementById("editUserId").value   = id;
        document.getElementById("editUsername").value = username;
        document.getElementById("editEmail").value    = email;
        document.getElementById("editPassword").value = "";

        let roleValue = "3";
        if (roleId === 1 || roleId === "1") {
            roleValue = "1";   
        } else if (roleId === 2 || roleId === "2") {
            roleValue = "2";   
        } else if (roleId === 3 || roleId === "3") {
            roleValue = "3"; 
        }

        document.getElementById("editRoleId").value = roleValue;

        document.getElementById("editUserModal").style.display = "flex";
        document.body.style.overflow = "hidden";
    }

    function closeEditUserModal() {
        document.getElementById("editUserModal").style.display = "none";
        document.body.style.overflow = "auto";
    }

    window.onclick = function (event) {
        const modal = document.getElementById("editUserModal");
        if (event.target === modal) {
            closeEditUserModal();
        }
    }
</script>


<style>
    .success_overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(8px);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
        animation: fadeIn 0.4s ease-out;
    }

    .success_card {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.2);
        padding: 40px;
        border-radius: 24px;
        text-align: center;
        max-width: 400px;
        width: 90%;
        box-shadow: 0 20px 50px rgba(0,0,0,0.5);
        transform: scale(0.9);
        animation: popIn 0.5s cubic-bezier(0.26, 0.53, 0.74, 1.48) forwards;
    }

    .success_icon {
        width: 80px;
        height: 80px;
        background: #10b981;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        box-shadow: 0 0 20px rgba(16, 185, 129, 0.4);
    }

    .check_mark {
        width: 40px;
        height: 20px;
        border-left: 5px solid white;
        border-bottom: 5px solid white;
        transform: rotate(-45deg);
        margin-top: -5px;
    }

    .success_title {
        font-size: 24px;
        font-weight: 700;
        margin-bottom: 10px;
        color: #fff;
    }

    .success_text {
        color: #ccc;
        margin-bottom: 25px;
        font-size: 15px;
    }

    .btn_close_success {
        background: #fff;
        color: #1a1a2e;
        border: none;
        padding: 12px 30px;
        border-radius: 12px;
        font-weight: 700;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn_close_success:hover {
            background: #00d2ff;
            color: white;
        }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes popIn {
        from {
            transform: scale(0.8);
            opacity: 0;
        }

        to {
            transform: scale(1);
            opacity: 1;
        }
