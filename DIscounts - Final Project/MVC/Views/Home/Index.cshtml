@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="header">
    <nav class="nav">
        <a asp-controller="Home" asp-action="Index" class="nav_logo">Discounts</a>
        <ul class="nav_items">
            <li class="nav_item">
                <a asp-controller="Home" asp-action="Offers" class="nav_link">Offers</a>
            </li>
        </ul>

        @if (User.Identity.IsAuthenticated)
        {
            <a asp-controller="Account" asp-action="Profile" class="profile_btn">
                <i class="uil uil-user-circle"></i>
                <span>@User.Identity.Name</span>
            </a>
        }
        else
        {
            <a asp-controller="Account" asp-action="Login" class="button_login">Log In</a>
        }
    </nav>
</header>

<section class="home">
    <div class="main_content_wrapper">

        <div class="hero_text">
            <h1>Save Big on Everything You Love</h1>
            <p>Discover exclusive vouchers, flash sales, and local merchant discounts updated every hour. Don't pay full price again.</p>
        </div>

        <div class="form_container customer_dashboard">
            <i class="uil uil-times form_close"></i>

            @if (User.Identity.IsAuthenticated)
            {
                <h2>Welcome Back</h2>
                <div class="dashboard_panels">
                    <a asp-controller="Account" asp-action="Index" class="panel">
                        <i class="uil uil-apps"></i>
                        <span>Go to My Panel</span>
                    </a>
                </div>

                <form asp-controller="Account" asp-action="Logout" method="post" class="logout_form">
                    <button type="submit" class="logout_button">Sign Out</button>
                </form>
            }
            else
            {
                <h2>Best Deals in Town</h2>
                <p style="text-align:center; color: #ccc; margin-bottom: 20px;">
                    Join thousands of shoppers saving money every day!
                </p>
                <div style="display: flex; justify-content: center;">
                    <a asp-controller="Account" asp-action="Register" class="button_login" style="background: #10b981;">Create Free Account</a>
                </div>
            }
        </div>

        <div class="featured_section">
            <div class="feat_item">
                <i class="uil uil-utensils"></i>
                <span>Food & Dining</span>
            </div>
            <div class="feat_item">
                <i class="uil uil-shopping-bag"></i>
                <span>Fashion Deals</span>
            </div>
            <div class="feat_item">
                <i class="uil uil-bolt"></i>
                <span>Tech Savings</span>
            </div>
        </div>
    </div>
</section>

<style>
    .section_title {
        text-align: center;
        margin-bottom: 35px;
        font-size: 28px;
        font-weight: 700;
        letter-spacing: 1.5px;
        text-transform: uppercase;
        background: linear-gradient(to right, #fff, #a5a5ff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 5px 15px rgba(165, 165, 255, 0.2);
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        overflow-x: hidden;
        font-family: 'Poppins', sans-serif;
    }

    .home {
        position: relative;
        width: 100%;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 120px 20px;
        background: linear-gradient(rgba(11, 11, 30, 0.75), rgba(11, 11, 30, 0.75)), url('/images/bg.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

    .main_content_wrapper {
        width: 100%;
        max-width: 1000px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 50px;
    }

    .hero_text {
        text-align: center;
        color: white;
        max-width: 800px;
        animation: fadeInDown 0.8s ease-out;
        position: absolute;
    }

        .hero_text h1 {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 15px;
            background: linear-gradient(to right, #fff, #4f46e5);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            line-height: 1.2;
        }

        .hero_text p {
            font-size: 1.2rem;
            color: rgba(255, 255, 255, 0.8);
            line-height: 1.6;
        }

    .header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        background: rgba(25, 30, 60, 0.95);
        backdrop-filter: blur(10px);
        z-index: 1000;
        padding: 15px 0;
        border-bottom: 1px solid rgba(255,255,255,0.05);
    }

    .nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .nav_logo {
        font-size: 24px;
        font-weight: 700;
        color: #fff;
        text-decoration: none;
    }

    .nav_items {
        list-style: none;
        display: flex;
        gap: 20px;
    }

    .nav_link {
        color: rgba(255,255,255,0.8);
        text-decoration: none;
        font-weight: 500;
        transition: 0.3s;
    }

        .nav_link:hover {
            color: #fff;
        }

    .customer_dashboard {
        width: 100%;
        max-width: 550px;
        padding: 40px;
        border-radius: 24px;
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
        position: relative;
    }

        .customer_dashboard h2 {
            text-align: center;
            margin-bottom: 15px;
            color: #fff;
            font-size: 1.8rem;
        }

    .panel {
        width: 160px;
        height: 160px;
        border-radius: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: linear-gradient(145deg, #4f46e5, #3730a3);
        color: white;
        text-decoration: none;
        transition: 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        box-shadow: 0 10px 20px rgba(0,0,0,0.2);
    }

        .panel:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(79, 70, 229, 0.4);
        }

    .featured_section {
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .feat_item {
        background: rgba(255, 255, 255, 0.05);
        padding: 12px 25px;
        border-radius: 50px;
        color: white;
        display: flex;
        align-items: center;
        gap: 10px;
        border: 1px solid rgba(255,255,255,0.1);
        transition: 0.3s;
    }

        .feat_item:hover {
            background: #4f46e5;
            border-color: transparent;
        }

    .profile_btn {
        align-items: center;
        gap: 8px;
        background: rgba(255,150    ,255,0.1);
        padding: 8px 20px;
        border-radius: 50px;
        color: white;
        text-decoration: none;
        border: 1px solid rgba(255,255,255,0.2);
    }

        .profile_btn:hover {
            background: #4f46e5;
            border-color: transparent;
            transform: scale(1.05);
            filter: brightness(1.2);
            box-shadow: 0 6px 20px rgba(79, 70, 229, 0.4);
        }

    .button_login {
        background: #4f46e5;
        color: #fff;
        text-decoration: none;
        padding: 12px 30px;
        border-radius: 12px;
        font-weight: 600;
    }

    .logout_button {
        background: #ef4444;
        color: #fff;
        border: none;
        padding: 6px 14px;
        border-radius: 8px;
        cursor: pointer;
        font-size: 12px;
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .button_login:hover {
        transform: scale(1.05);
        filter: brightness(1.2);
        box-shadow: 0 6px 20px rgba(79, 70, 229, 0.4);
    }
</style>
