@{
    var status = ViewData["StatusCode"];
    var title = ViewData["Title"];
    var message = ViewData["Message"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            font-family: 'Segoe UI', sans-serif;
        }

        .error-card {
            background: white;
            padding: 3rem;
            border-radius: 1rem;
            box-shadow: 0 15px 40px rgba(0,0,0,0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .error-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 25px 50px rgba(0,0,0,0.3);
        }

        .status-code {
            font-size: 5rem;
            font-weight: bold;
            color: #dc3545;
            transition: color 0.3s ease;
        }

        .status-code:hover {
            color: #bd2130;
        }

        .btn-home {
            transition: transform 0.2s ease, background-color 0.3s ease;
        }

        .btn-home:hover {
            transform: scale(1.05);
            background-color: #6610f2;
            color: white;
        }

        .error-message {
            font-size: 1.25rem;
            margin-top: 1rem;
            color: #495057;
        }

        .glow-title {
            text-shadow: 0 0 10px rgba(220,53,69,0.7);
        }

      
    </style>
</head>
<body>
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="text-center error-card">
            <div class="status-code glow-title">@status</div>
            <h1 class="display-5 mb-3">@title</h1>
            <p class="error-message">@message</p>
            <a href="/" class="btn btn-outline-primary btn-home mt-3">Go Home</a>
        </div>
    </div>
</body>
</html>
