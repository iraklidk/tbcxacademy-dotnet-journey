@model List<Application.DTOs.Coupon.CouponDto>

@{
    ViewData["Title"] = "Sales History";
}

<section class="home show">
    <div class="form_container admin_dashboard">

        <a asp-controller="Merchant" asp-action="Index" class="dashboard_btn">
            <i class="uil uil-apps"></i> Panel
        </a>

        <h2 class="section_title">Sales History</h2>

        <div class="content_area">
            <div class="sales_table_container">
                <table class="sales_table">
                    <thead>
                        <tr>
                            <th>Customer</th>
                            <th>Coupon Code</th>
                            <th>Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody class="scrollable_tbody">
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var coupon in Model)
                            {
                                <tr>
                                    <td>@coupon.CustomerName</td>
                                    <td>@coupon.Code</td>
                                    <td>@(coupon.PurchasedAt.ToString("yyyy-MM-dd") ?? "N/A")</td>
                                    <td>
                                        @if (coupon.Status == Domain.Constants.CouponStatus.Used)
                                        {
                                            <span class="status_used">Used</span>
                                        }
                                        else if(coupon.Status == Domain.Constants.CouponStatus.Expired)
                                        {
                                            <span class="status_used">Expired</span>
                                        }
                                        else
                                        {
                                            <span class="status_active">Active</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" style="text-align: center; padding: 50px; color: #8a8ab0;">
                                    No sales records found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

