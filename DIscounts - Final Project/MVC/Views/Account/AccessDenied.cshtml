@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout";
}

<div class="access-wrapper">
    <div class="access-card">

        <div class="access-code">403</div>

        <div class="access-title">Access Denied</div>

        <div class="access-message">
            You don’t have permission to view this page.
        </div>

        <div>
            <a asp-controller="Home" asp-action="Index" class="access-btn btn-primary-custom">
                Go Home
            </a>
            @if (User.Identity.IsAuthenticated)
            {
                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Admin" asp-action="Index" class="access-btn btn-primary-custom">
                        Go to Profile
                    </a>
                }
                else if(User.IsInRole("Merchant"))
                {
                    <a asp-controller="Merchant" asp-action="Index" class="access-btn btn-primary-custom">
                        Go to Profile
                    </a>
                }
                else
                {
                    <a asp-controller="Customer" asp-action="Index" class="access-btn btn-primary-custom">
                        Go to Profile
                    </a>
                }
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="access-btn btn-outline-custom">
                    Sign In
                </a>
            }
        </div>

    </div>
</div>

<style>
    html, body {
        height: 100%;
        margin: 0;
    }

    .access-wrapper {
        min-height: 100vh;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
    }

    .access-card {
        background: rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border-radius: 20px;
        padding: 60px 40px;
        max-width: 500px;
        width: 90%;
        text-align: center;
        color: white;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        animation: fadeIn 0.6s ease-in-out;
    }

    .access-code {
        font-size: 5rem;
        font-weight: 800;
        margin-bottom: 10px;
        letter-spacing: 3px;
    }

    .access-title {
        font-size: 1.8rem;
        font-weight: 600;
        margin-bottom: 15px;
    }

    .access-message {
        opacity: 0.85;
        margin-bottom: 30px;
        line-height: 1.6;
    }

    .access-btn {
        padding: 10px 22px;
        border-radius: 30px;
        text-decoration: none;
        font-weight: 600;
        margin: 5px;
        display: inline-block;
        transition: all 0.3s ease;
    }

    .btn-primary-custom {
        background: #ffffff;
        color: #203a43;
    }

        .btn-primary-custom:hover {
            background: #e2e2e2;
            transform: translateY(-2px);
        }

    .btn-outline-custom {
        border: 2px solid #ffffff;
        color: #ffffff;
    }

        .btn-outline-custom:hover {
            background: #ffffff;
            color: #203a43;
            transform: translateY(-2px);
        }
}
</style>
